<div class="institution_form_flex_container">
  <div class="institution_info_container">
    <div class="institution_name_container">
      <%= f.label :name, "医療機関名", class: "institution_label", id: "institution_name_label" %>
      <%= f.text_field :name, class: "institution_text", id: "institution_name_text" %>
    </div>
    <div class="institution_department_container">
      <%= f.label :department, "診療科目　", class: "institution_label", id: "institution_department_label" %>
      <%= f.text_field :department, class: "institution_text", id: "institution_department_text" %>
    </div>
    <div class="institution_postcode_container">
      <%= f.label :postcode, "郵便番号　", class: "institution_label",id: "institution_postcode_label" %>
      <%= f.text_field :postcode, class: "institution_text", id: "institution_postcode_text" %>
    </div>
    <div class="institution_prefecture_container">
      <%= f.label :prefecture, "都道府県　", class: "institution_label",id: "institution_prefecture_label" %>
      <%= f.collection_select :prefecture, JpPrefecture::Prefecture.all, :name, :name, prompt: "都道府県", id: "institution_prefecture_text" %>
    </div>
    <div class="institution_city_container">
      <%= f.label :address_city, "　市町村　", class: "institution_label",id: "institution_citylabel" %>
      <%= f.text_field :address_city, class: "institution_text", id: "institution_city_text" %>
    </div>
    <div class="institution_street_container">
      <%= f.label :address_street,"　　番地　", class: "institution_label",id: "institution_street_label" %>
      <%= f.text_field :address_street, class: "institution_text", id: "institution_street_text" %>
    </div>
    <div class="institution_building_container">
      <%= f.label :address_building, "　建物名　", class: "institution_label",id: "institution_building_label" %>
      <%= f.text_field :address_building, class: "institution_text", id: "institution_building_text" %>
    </div>
    <div class="institution_intro_container">
      <%= f.label :introduction, "　　紹介　", class: "institution_label",id: "institution_intro_label" %>
      <%= f.text_area :introduction, class: "institution_text", id: "institution_intro_text" %>
    </div>
  </div>
  <div class="institution_image_container">
    <%= f.label :image, "画像登録", id: "institution_image_label" %>
      <div class="institution_image_box">
        <% if @institution.image? %>
          <%= image_tag @institution.image.url, alt: "アイコン画像", id: "institution_image" %>
        <% else %>
          <%= image_tag "default_institution_image.png", alt: "アイコン画像", id: "default_institution_image" %>
        <% end %>
      </div>
    <div class="institution_image_uploader">
      <%= f.file_field :image %>
    </div>
  </div>
</div>

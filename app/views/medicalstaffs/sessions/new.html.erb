<div class="medicalstaff_login_main">
  <div class="medicalstaff_login_container">
    <h2>医療関係者ログイン</h2>
    <%= form_with(model: resource, scope: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <span class="medicalstaff_login_mail_label">メールアドレス</span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "medicalstaff_login_email" %>
      </div>
      <div class="field">
        <span class="medicalstaff_login_password_label">　パスワード　</span>
        <%= f.password_field :password, autocomplete: "current-password", id: "medicalstaff_login_password" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <span class="medicalstaff_login_remember_me">ログイン情報を記憶する</span>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "ログイン", class: "medicalstaff_login_submit" %>
      </div>
    <% end %>
    <%= render "medicalstaffs/shared/links" %>
    <div class="medicalstaff_admin">
      <p class="medicalstaff_admin_text">テスト用アカウント</p>
      <p class="medicalstaff_admin_mail">staff@staff.com</p>
      <p class="medicalstaff_admin_password">foobarbaz</p>
    </div>
  </div>
</div>

<div class="medicalstaff_registration_main">
  <div class="medicalstaff_registration_container">
    <h2>医療関係者新規登録</h2>
    <%= form_with(model: resource, scope: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "medicalstaffs/shared/error_messages", resource: resource %>
      <div class="field">
        <span class="medicalstaff_registration_mail_label">　　メールアドレス　　</span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "medicalstaff_registration_email" %>
      </div>
      <div class="field">
        <span class="medicalstaff_registration_password_label">パスワード
          <% if @minimum_password_length %>
            <span>(<%= @minimum_password_length %>文字以上)</span>
          <% end %>
        </span>
        <%= f.password_field :password, autocomplete: "new-password", id: "medicalstaff_registration_password" %>
      </div>
      <div class="field">
        <span class="medicalstaff_registration_password_confirmation_label">　パスワード(確認用)　</span>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "medicalstaff_registration_confirm_password" %>
      </div>
      <div class="actions">
        <%= f.submit "新規登録", class: "medicalstaff_registration_submit" %>
      </div>
    <% end %>
    <%= render "medicalstaffs/shared/links" %>
    <div class="medicalstaff_admin">
      <p class="medicalstaff_admin_text">テスト用アカウント</p>
      <p class="medicalstaff_admin_mail">staff@staff.com</p>
      <p class="medicalstaff_admin_password">foobarbaz</p>
    </div>
  </div>
</div>

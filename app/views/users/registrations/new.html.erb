<div class="user_registration_main">
  <h2>患者様・ご家族様新規登録</h2>

  <%= form_with(model: resource, scope: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="field">
      <p class="user_registraion_mail_label">メールアドレス</p>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field">
      <p class="user_registraion_password_label">パスワード</p>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    <div class="field">
      <p class="user_registraion_password_confirmation_label">パスワード(確認用)</p>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="actions">
      <%= f.submit "新規登録", class: "user_registration_submit" %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
</div>

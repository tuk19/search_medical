<div class="user_passwords_main">
  <div class="user_passwords_container">
    <h2>パスワード再設定</h2>
    <%= form_with(model: resource, scope: resource_name, url: password_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="field">
        <span class="user_passwords_mail_label">メールアドレス</span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "new_user_passwords_email" %>
      </div>
      <div class="actions">
        <%= f.submit "再設定用のメールをアドレスに送信する", class: "user_passwords_submit" %>
      </div>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
</div>

<div class='star-btn' id="favorite_<%= institution.id %>">
  <% if !Favorite.exists?(user_id: current_user.id, institution_id: institution.id) %>
    <%= link_to institution_favorites_path(institution.id), method: :post, remote: true, class:"like-btn" do %>
      <i class="far fa-star"></i>お気に入り
    <% end %>
    <span class="star-count1"><%= institution.favorites.count %></span>
  <% else %>
    <%= link_to institution_favorites_path(institution_id: institution.id, id: institution.favorites[0].id), method: :delete, remote: true, class:"like-btn" do %>
      <i class="fas fa-star star-icon2"></i>お気に入り解除
    <% end %>
    <span class="star-count2"><%= institution.favorites.count %></span>
  <% end %>
</div>
